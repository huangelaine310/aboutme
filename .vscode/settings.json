{
  "git.ignoreLimitWarning": true,
  "eslint.autoFixOnSave": true,
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "latex", "plaintext", "html"],
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[css]": {
      "editor.formatOnSave": true
  }
}
